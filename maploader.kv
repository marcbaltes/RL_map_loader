#:kivy 1.0.9

<MapLoader>: 
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: 0, self.height - 43
            size: self.width, 43

    Label:
        id: RLPATH
        text: 'RL Path: '
        text_size: 500, 500
        halign:'left'
        valign:'middle'
        pos: 205, root.height - 104

    Label:
        id: MAPPATH
        text: 'Map Folder Path: '
        text_size: 500, 500
        halign:'left'
        valign:'middle'
        pos: 205, root.height - 122

    RLPathButton:
        pos: root.x+1, root.height - 42
        size: 225, 40
        text: 'Locate Rocket League Folder'
        on_press: self.get_path()
        on_state: root.update_RLPATH()

    MapPathButton:
        pos: root.x + 226, root.height - 42
        size: 160, 40
        text: 'Locate Map Folder'
        on_press: self.get_path()
        on_state: root.update_MAPPATH()

    Button:
        pos: root.width - 150, root.height - 42
        size: 150, 40
        text: 'Repair Game Files'
        on_press: root.test()
    
    ImportButton:
        pos: root.width - 250, root.height - 42
        size: 100, 40
        text: 'Import Map'
        on_press: self.get_path()



            